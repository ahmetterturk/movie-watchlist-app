<%- include("partials/header") %> 
<div class="container" id="index">
    <% movies.forEach(function(movie){ %> 
        <article class="media content-section">
            <div class="media-body">
                <div class="article-metadata">

                        <div class="row">
                            <div class="col col-lg-3 col-sm-12 col-12">
                                <img class="rounded" src="<%= movie.image %> " alt="Oops!">
                            </div>
                            <div class="col col-lg-9 col-sm-12 col-12">
                                <h1><%= movie.name %> </h1>
                                <hr>
                                <p><strong>Year: </strong><%= movie.year %> </p>
                                <p><strong>Director: </strong><%= movie.director %> </p>
                                <p><strong>Cast: </strong><%= movie.cast %> </p>
                                <p><strong>Storyline: </strong><%= movie.storyLine.substring(0,100) %>...</p>
                                <a class="btn btn-outline-secondary btn-sm" href="/movies/<%= movie._id %> ">Read More</a>
                            </div>
                            
                            
                        </div>

                </div>
            </div>
        </article>
    <% }) %> 
</div>
<%- include("partials/footer") %> 
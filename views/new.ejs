<%- include("partials/header") %> 
<div class="container" id="new">
    <form action="/movies" method="POST">
        <div class="form-group">
            <label for="formGroupExampleInput">Title</label>
            <input type="text" class="form-control" id="formGroupExampleInput" name="movie[name]" placeholder="Inception">
        </div>
        <div class="form-group">
            <label for="formGroupExampleInput2">Image</label>
            <input type="text" class="form-control" id="formGroupExampleInput2" name="movie[image]" placeholder="Image Url">
        </div>
        <div class="form-group">
            <label for="formGroupExampleInput2">Year</label>
            <input type="text" class="form-control" id="formGroupExampleInput2" name="movie[year]" placeholder="2010">
        </div>
        <div class="form-group">
            <label for="formGroupExampleInput2">Director</label>
            <input type="text" class="form-control" id="formGroupExampleInput2" name="movie[director]" placeholder="Christopher Nolan">
        </div>
        <div class="form-group">
            <label for="formGroupExampleInput2">Cast</label>
            <input type="text" class="form-control" id="formGroupExampleInput2" name="movie[cast]" placeholder="Leonardo Dicaprio, Joseph Gordon-Levitt">
        </div>
        <div class="form-group">
            <label for="exampleFormControlTextarea1">Storyline</label>
            <textarea class="form-control" id="exampleFormControlTextarea1" name="movie[storyLine]" rows="7"></textarea>
        </div>
        <button class="btn btn-primary">Submit</button>
    </form>
</div>
<%- include("partials/footer") %> 
<%- include("partials/header") %> 
<div class="container" id="edit">
    <form action="/movies/<%= movie._id %>?_method=PUT " method="POST">
        <div class="form-group">
            <label for="formGroupExampleInput">Title</label>
            <input type="text" class="form-control" id="formGroupExampleInput" name="movie[name]" value="<%= movie.name %> ">
        </div>
        <div class="form-group">
            <label for="formGroupExampleInput2">Image</label>
            <input type="text" class="form-control" id="formGroupExampleInput2" name="movie[image]" value="<%= movie.image %> ">
        </div>
        <div class="form-group">
            <label for="formGroupExampleInput2">Year</label>
            <input type="text" class="form-control" id="formGroupExampleInput2" name="movie[year]" value="<%= movie.year %> ">
        </div>
        <div class="form-group">
            <label for="formGroupExampleInput2">Director</label>
            <input type="text" class="form-control" id="formGroupExampleInput2" name="movie[director]" value="<%= movie.director %> ">
        </div>
        <div class="form-group">
            <label for="formGroupExampleInput2">Cast</label>
            <input type="text" class="form-control" id="formGroupExampleInput2" name="movie[cast]" value="<%= movie.cast %> ">
        </div>
        <div class="form-group">
            <label for="exampleFormControlTextarea1">Storyline</label>
            <textarea class="form-control" id="exampleFormControlTextarea1" name="movie[storyLine]" rows="7"><%= movie.storyLine %></textarea>
        </div>
        <button class="btn btn-primary">Submit</button>
    </form>
</div>
<%- include("partials/footer") %> 